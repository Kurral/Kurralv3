# Kurral Configuration
# Copy this file to .env and fill in your values

# Application
KURRAL_ENVIRONMENT=development
KURRAL_LOG_LEVEL=INFO

# LangSmith Integration (Optional)
LANGSMITH_API_KEY=
LANGSMITH_PROJECT=

# Database
DATABASE_URL=postgresql://kurral:kurral@localhost:5432/kurral

# S3 Storage
S3_BUCKET=kurral-artifacts
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Redis (for caching and job queue)
REDIS_URL=redis://localhost:6379/0

# API Server (if running FastAPI)
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4

# Security
API_KEY=your-secret-api-key-here

# Replay Settings
REPLAY_CACHE_TTL=3600
REPLAY_MAX_RETRIES=3

# Backtest Settings
BACKTEST_DEFAULT_THRESHOLD=0.90
BACKTEST_MAX_REPLAYS=100

# Notifications (Optional)
SLACK_WEBHOOK_URL=
EMAIL_FROM=kurral@example.com
EMAIL_TO=team@example.com
